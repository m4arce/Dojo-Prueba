<div class="container">
    <h1>LISTA DE EDIFICIOS</h1>

    <h3 class= "text-center" id="notice"><%= notice %></h3>

    <br>
    <table class="table">
        <thead>
            <tr class="table-secondary">
                <th scope="col">ID EDIFICIO</th>
                <th scope="col">NOMBRE EDIFICIO</th>
                <th scope="col">DIRECCION</th>
                <th scope="col">CIUDAD</th>
                <th colspan="3">ACCIONES</th>
            </tr>
        </thead>

        <tbody>
            <% @buildings.each do |b| %>
                <tr>        
                    <td><%= b.id %></td>
                    <td><%= b.nombre_edificio %></td>
                    <td><%= b.direccion %></td>
                    <td><%= b.ciudad %></td>
                    
                    <td><%= link_to "Mostrar", building_path(b), class: "btn btn-secondary" %></td>       
                    
                </tr>
            <% end %>
        </tbody>
    </table>

    <%= link_to 'Agregar Edificio', new_building_url(@building), class:"btn btn-success" %>
    
</div>


